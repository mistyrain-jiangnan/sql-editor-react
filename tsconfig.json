{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
  ],
    "compilerOptions": {
      "module": "ESNext",
      "lib": ["ESNext", "dom", "dom.iterable"],
      "target": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "noEmit": false,
      "allowJs":true
    },
    "include": [
      "./src" // 包含 src 目录下的所有文件
    ],
    "exclude": [
      "./src/example/**/*"  // 排除 src/example 目录下的所有文件
    ]
}
